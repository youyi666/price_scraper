{
  "name": "mixed-price-scraper-pro",
  "version": "3.2.0",
  "description": "全平台价格监控系统 - 专业版",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.scraper.pro",
    "productName": "PriceMonitor_Pro",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "extraResources": [
      "scraper_engine.js",
      "tasks.xlsx",
      "config.json",
      "node_modules/**"
    ]
  },
  "dependencies": {
    "electron": "^28.0.0",
    "exceljs": "^4.3.0",
    "luxon": "^3.4.4",
    "playwright": "^1.57.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "turndown": "^7.2.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  }
}
